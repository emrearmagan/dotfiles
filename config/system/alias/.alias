alias reload='source ~/.zshrc'
alias tmux-reload="tmux source-file ~/.config/tmux/tmux.conf"

alias cls='clear'

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias l="ls -lhF ${colorflag}"
alias la="ls -lahF ${colorflag}"
alias lsd="ls -lhF ${colorflag} | grep --color=never '^d'"
alias ls='ls ${colorflag}'

# Copy pwd to clipboard
alias cpwd="pwd|tr -d '\n'|pbcopy"

# Folder color
# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

# Shortcuts
alias dl="cd ~/Downloads"
alias g="git"
alias h="history"

# Always enable colored `grep` output
alias grep='grep --color=auto '

# Get week number
alias week='date +%V'

alias pubkey="more ~/.ssh/id_ed25519.pub | pbcopy | echo '=> Public key copied to pasteboard.'"

# Convience
alias cat=bat
alias how=tldr
alias pcopy=pbcopy
alias ppaste=pbpaste
alias v=nvim

# Copy public key to clipboard
alias pubkey="more ~/.ssh/id_ed25519.pub | xclip -selection clipboard | echo '=> Public key copied to pasteboard.'"

# Search files
alias f="fzf --style minimal --preview 'bat --color=always {}' --preview-window '~3' | xargs -I {} nvim \"{}\""

# Grep through files (please improve...)
alias ffg="grep --line-number --color=always -r --exclude-dir=.git '' . \
  | fzf --ansi --delimiter ':' --preview 'bat --style=numbers --color=always --highlight-line {2} {1}' --preview-window=up:60% \
  | awk -F: '{print \$1, \$2}' \
  | xargs -r -n2 sh -c 'nvim +\$1 \"\$0\"'"
